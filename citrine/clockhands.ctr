{ :i
        >> hms := ((i - 0.5) × 43200 ÷ 11) floor.
        >> h := (hms ÷ 3600) floor.
        >> m := ((hms modulo: 3600) ÷ 60) floor.
        >> s := hms modulo: 60.
        h = 0 true: { h := 12.}.
        >> pad := { :n <- (n < 10 either: ['0'] or: ['']) + n.}.
        Out write: (pad apply: h) + [':'] + 
                (pad apply: m) + [':'] + 
                (pad apply: s) + ['\n'].
} × 11.